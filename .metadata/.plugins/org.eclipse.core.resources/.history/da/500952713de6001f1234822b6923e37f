#ifndef BSW_HAL_POWER_MANAGEMENT_INC_PWRMNG_H_
#define BSW_HAL_POWER_MANAGEMENT_INC_PWRMNG_H_

typedef struct
{
	uint8 :4; //reserved
	uint8 SM0 :1;
	uint8 SM1 :1;
	uint8 SM2 :1;
	uint8 SE  :1;

}MCUCR_Struct;

typedef enum
{
	IDLE ,
	ADC_NOISE_REDUCTION


}PwrModes;

#define MCUCR_PwrMg  *((volatile MCUCR_Struct)0x55)



#endif /* BSW_HAL_POWER_MANAGEMENT_INC_PWRMNG_H_ */
